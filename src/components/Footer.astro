---
import { LANGUAGES } from '../i18n/translations';

interface Props {
  lang?: 'ca' | 'es' | 'en';
}

const { lang = 'ca' } = Astro.props;
const t = LANGUAGES[lang]?.footer || LANGUAGES['ca'].footer;

const currentYear = new Date().getFullYear();
---

<footer class="relative bg-gradient-to-b from-white to-gray-50 border-t border-gray-200">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <div class="flex justify-center md:justify-start">
        <a href={`/${lang}/`} class="text-2xl font-bold text-primary">onticket</a>
      </div>
      <div class="flex justify-center space-x-8">
        <a href={`/${lang}/terms`} class="text-gray-500 hover:text-primary transition-colors text-sm">
          {t.terms}
        </a>
        <a href={`/${lang}/privacy`} class="text-gray-500 hover:text-primary transition-colors text-sm">
          {t.privacy}
        </a>
        <a href="mailto:analyticszone@onmedic.org" class="text-gray-500 hover:text-primary transition-colors text-sm">
          {t.contact}
        </a>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-200">
      <p class="text-center text-sm text-gray-400">
        &copy; {currentYear} onticket. {t.rights}
      </p>
    </div>
  </div>
</footer>
