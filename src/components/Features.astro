---
import { LANGUAGES } from '../i18n/translations';

interface Props {
  lang?: 'ca' | 'es' | 'en';
}

const { lang = 'ca' } = Astro.props;
const t = LANGUAGES[lang]?.features || LANGUAGES['ca'].features;

---
<section id="features" class="py-24 bg-white relative overflow-hidden">
  <!-- Subtle background pattern -->
  <div class="absolute inset-0 opacity-30">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgb(0 26 142 / 0.05) 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <span class="inline-block px-4 py-1 rounded-full bg-primary/10 text-primary text-sm font-semibold tracking-wide uppercase">{t.sectionTitle}</span>
      <p class="mt-4 text-4xl leading-tight font-extrabold tracking-tight text-gray-900 sm:text-5xl">
        {t.mainTitle}
      </p>
      <p class="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
        {t.subtitle}
      </p>
    </div>

    <div class="mt-20">
      <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Feature 1: Receipt Scanning -->
        <div class="group relative bg-gradient-to-br from-white to-gray-50 rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-secondary/50 hover:-translate-y-2">
          <div class="absolute inset-0 bg-gradient-to-br from-secondary/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative">
            <div class="inline-flex items-center justify-center w-14 h-14 bg-gradient-to-br from-secondary to-cyan-400 rounded-xl shadow-lg shadow-secondary/30">
              <svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="mt-6 text-xl font-bold text-gray-900">{t.scanTitle}</h3>
            <p class="mt-4 text-gray-600 leading-relaxed">
              {t.scanDesc}
            </p>
          </div>
        </div>

        <!-- Feature 2: Visual Analysis -->
        <div class="group relative bg-gradient-to-br from-white to-gray-50 rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-primary/50 hover:-translate-y-2">
          <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative">
            <div class="inline-flex items-center justify-center w-14 h-14 bg-gradient-to-br from-primary to-blue-700 rounded-xl shadow-lg shadow-primary/30">
              <svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <h3 class="mt-6 text-xl font-bold text-gray-900">{t.analysisTitle}</h3>
            <p class="mt-4 text-gray-600 leading-relaxed">
              {t.analysisDesc}
            </p>
          </div>
        </div>

        <!-- Feature 3: Multi-language -->
        <div class="group relative bg-gradient-to-br from-white to-gray-50 rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-accent/50 hover:-translate-y-2">
          <div class="absolute inset-0 bg-gradient-to-br from-accent/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative">
            <div class="inline-flex items-center justify-center w-14 h-14 bg-gradient-to-br from-accent to-yellow-500 rounded-xl shadow-lg shadow-accent/30">
              <svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
              </svg>
            </div>
            <h3 class="mt-6 text-xl font-bold text-gray-900">{t.langTitle}</h3>
            <p class="mt-4 text-gray-600 leading-relaxed">
              {t.langDesc}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
