---
import { LANGUAGES } from '../i18n/translations';

interface Props {
  lang?: 'ca' | 'es' | 'en';
}

const { lang = 'ca' } = Astro.props;
const t = LANGUAGES[lang]?.hero || LANGUAGES['ca'].hero;

---
<section class="relative overflow-hidden pt-20 pb-24 lg:pt-28 lg:pb-32">
  <!-- Animated gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50"></div>
  
  <!-- Decorative floating shapes -->
  <div class="absolute top-20 left-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-10 right-10 w-96 h-96 bg-secondary/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-accent/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-12 items-center">
      <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-medium mb-6 animate-fade-in">
          <span class="relative flex h-2 w-2 mr-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
          </span>
          iOS & Android
        </div>
        
        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl">
          <span class="block">{t.titlePRE}</span>
          <span class="block bg-gradient-to-r from-primary via-blue-600 to-secondary bg-clip-text text-transparent">{t.titleHighlight}</span>
        </h1>
        <p class="mt-6 text-lg text-gray-600 sm:text-xl sm:max-w-xl sm:mx-auto lg:mx-0 leading-relaxed">
          {t.subtitle}
        </p>
        <div class="mt-10 sm:flex sm:justify-center lg:justify-start gap-4">
          <div class="transform transition-all duration-300 hover:scale-105">
            <a href="https://play.google.com/store/apps/details?id=com.alarno.onticket" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center">
              <img src="/badge-google-play.svg" alt="Google Play" class="h-14 drop-shadow-lg" />
            </a>
          </div>
          <div class="mt-3 sm:mt-0 transform transition-all duration-300 hover:scale-105">
            <a href="https://apps.apple.com/es/app/onticket/id6478814169" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center">
              <img src="/badge-app-store.svg" alt="App Store" class="h-14 drop-shadow-lg" />
            </a>
          </div>
        </div>
      </div>
      <div class="mt-16 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 flex justify-center lg:justify-end">
        <!-- Phone mockup with glow effect -->
        <div class="relative">
          <div class="absolute -inset-4 bg-gradient-to-r from-primary/30 via-secondary/30 to-accent/30 rounded-[4rem] blur-2xl opacity-60"></div>
          <div class="relative block w-72 bg-gray-900 rounded-[3rem] overflow-hidden shadow-2xl border-[8px] border-gray-800 aspect-[9/19.5]">
            <img 
              src="/app-mockup.png" 
              alt="onticket app screenshot" 
              class="absolute inset-0 w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }
</style>
