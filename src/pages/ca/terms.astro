<Layout title="Termes d'Ús - onticket">
  <Navbar lang="ca" />
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h1 class="text-3xl font-extrabold text-gray-900 mb-8">Termes i Condicions d'Ús</h1>
    
    <div class="prose prose-blue max-w-none text-gray-600">
